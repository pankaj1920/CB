<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".ui.auth.fragment.LoginFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/loginlogo"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/logo"
            app:civ_border_color="@color/logo_yellow"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/signInTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/sign_in_txt"
            android:textColor="@color/logo_yellow"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loginlogo" />


        <EditText
            android:id="@+id/emailMobileEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            android:lines="1"
            android:textColorHint="@color/black"
            android:backgroundTint="@color/white"
            android:hint="Email or Mobile"
            android:textColor="@color/black"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginTop="45dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintTop_toBottomOf="@id/signInTxt"
            android:background="@drawable/edit_txt_boder"/>

        <TextView
            android:id="@+id/fogrotPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:gravity="end"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/lighGrey"
            android:text="Forgot Password ?"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/verfiyOtp"
            app:layout_constraintTop_toBottomOf="@id/emailMobileEditText"/>

        <Button
            android:id="@+id/verfiyOtp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="100dp"
            android:textColor="@color/black"
            android:text="@string/sign_in_txt"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:fontFamily="@font/roboto_regular"
            android:background="@drawable/signin_btn_boder"
            app:layout_constraintStart_toStartOf="@id/emailMobileEditText"
            app:layout_constraintEnd_toEndOf="@id/emailMobileEditText"
            app:layout_constraintTop_toBottomOf="@id/emailMobileEditText"/>

        <TextView
            android:id="@+id/dont_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="14sp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/roboto_regular"
            app:layout_constraintStart_toStartOf="@id/verfiyOtp"
            app:layout_constraintEnd_toStartOf="@id/signUpTxt"
            app:layout_constraintTop_toBottomOf="@id/verfiyOtp"
            android:text="Don't have an account ? "
            android:textColor="@color/white"
            android:layout_marginTop="70dp"/>

        <TextView
            android:id="@+id/signUpTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/dont_txt"
            app:layout_constraintTop_toBottomOf="@id/verfiyOtp"
            android:text="Sign Up "
            android:fontFamily="@font/roboto_regular"
            android:textSize="17sp"
            android:textColor="@color/logo_yellow"
            android:layout_marginTop="70dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>